<odoo>
	<data>

		<record id="view_hr_payslip_form_custom_print" model="ir.ui.view">
			<field name="name">view.hr.payslip.form.custom.print</field>
			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@name='action_print_payslip']" position="replace">
					<button name="print_payslip_report" string="Print" type="object" class="btn-primary"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
