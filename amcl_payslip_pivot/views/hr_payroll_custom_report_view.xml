<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="hr_payroll_custom_report_view_pivot" model="ir.ui.view">
            <field name="name">payroll.custom.report.pivot</field>
            <field name="model">hr.payroll.custom.report</field>
            <field name="arch" type="xml">
                <pivot string="Payroll Report">
                    <field name="department_id"/>
                    <field name="employee_id" type="row"/>
                    <field name="count_work" type="measure"/>
                    <field name="basic_wage" type="measure"/>
                    <field name="hra_wage" type="measure"/>
                    <field name="transport_wage" type="measure"/>
                    <field name="gross_wage" type="measure"/>
                    <field name="other_wage" type="measure"/>
                    <field name="wovertime_input_wage" type="measure"/>
                    <field name="wovertime_wage" type="measure"/>
                    <field name="eovertime_wage" type="measure"/>
                    <field name="loan" type="measure"/>
                    <field name="loan_deduction" type="measure"/>
                    <field name="gosise" type="measure"/>
                    <!-- <field name="gosiccnse" type="measure"/>
                    <field name="gosiccse" type="measure"/> -->
                    <field name="mobile_allow" type="measure"/>
                    <field name="ticket_allow" type="measure"/>
                    <field name="late_deduction" type="measure"/>
                    <field name="bonus" type="measure"/>
                    <field name="early_go"/>
                    <field name="signon_bonus"/>
                    <field name="reimbursement"/>
                    <field name="exp_deduct"/>
                    <field name="emp_exp_deduct"/>
                    <field name="deductions" type="measure"/>
                    <field name="other_deductions" type="measure"/>
                    <field name="attach_salary"/>
                    <field name="assign_salary"/>
                    <field name="child_support"/>
                    <field name="remote_allow"/>
                    <field name="net_wage" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="hr_payroll_custom_report_view_search" model="ir.ui.view">
        	<field name="name">hr.payroll.custom.report.view.search</field>
        	<field name="model">hr.payroll.custom.report</field>
        	<field name="arch" type="xml">
        		<search>
        			<filter string="Start Date" name="date_from" date="date_from"/>
        		</search>
        	</field>
        </record>

        <record id="action_payslip_custom_report" model="ir.actions.act_window">
            <field name="name">Payroll Custom Report</field>
            <field name="res_model">hr.payroll.custom.report</field>
            <field name="view_mode">pivot</field>
        </record>

	</data>
</odoo>
