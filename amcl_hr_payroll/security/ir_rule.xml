<?xml version="1.0"?>
<odoo>

    <record id="amcl_hr.ahcec_advance_hr_hr_employee_others" model="ir.rule">
        <field name="name">HR Employee Others</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_payroll.group_hr_payroll_user'))]"/>
    </record>

    <!-- hr_payroll -->
    <record id="property_rule_employee_own_payslip" model="ir.rule">
        <field name="name">Employee Payslip</field>
        <field name="model_id" ref="model_hr_payslip"/>
        <field name="domain_force">['|', '|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id), ('employee_id.coach_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user')), (4,ref('amcl_hr.group_line_manager'))]"/>
    </record>

    <record id="roperty_rule_employee_payslip_others" model="ir.rule">
        <field name="name">All Employee Payslip</field>
        <field name="model_id" ref="model_hr_payslip"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_payroll.group_hr_payroll_user'))]"/>
    </record>

    <record id="property_rule_employee_own_payslip_line" model="ir.rule">
        <field name="name">Employee Payslip Line</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip_line"/>
        <field name="domain_force">['|', '|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id), ('employee_id.coach_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user')), (4,ref('amcl_hr.group_line_manager'))]"/>
    </record>

    <record id="property_rule_all_employee_payslip_line" model="ir.rule">
        <field name="name">All Employee Payslip Line</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip_line"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_payroll.group_hr_payroll_user'))]"/>
    </record>


    <record id="group_contract_amendment_access" model="res.groups">
        <field name="name">Contract Amendment</field>
    </record>
    <record id="group_eos_access" model="res.groups">
        <field name="name">EOS</field>
    </record>
    <record id="group_gr_operations_access" model="res.groups">
        <field name="name">GR Operations</field>
    </record>
    <record id="group_loan_approval_access" model="res.groups">
        <field name="name">Loan Approval</field>
    </record>


</odoo>
